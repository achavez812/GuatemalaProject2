<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="android:typeface">sans</item>
    	<item name="android:actionBarStyle">@style/MyActionBar</item>
    	<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    	<item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:panelBackground">#004d6b</item>
         <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    	
    </style>
       <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
     
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#004d6b</item>
        <item name="android:titleTextStyle">@style/TitleText</item>


        
    </style>
  
    <style name ="MyPopupMenu" parent="android:Theme.Holo.Light">
        <item name="android:popupBackground">#004d6b</item>
    </style>    
    
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
    	<item name="android:src">@drawable/ic_action_overflow</item>
	</style>
    <style name="TitleText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30sp</item>
  
    </style>
	<!--  
	<style name="HomePage" parent="AppTheme">
	<item name="android:background"> @drawable/guatemala_home_bg </item>
	</style>
	    -->
	 
	
    


</resources>
