<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="20dp">
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
        <TextView
		    android:id="@+id/illness_info_text"
		    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
            android:textSize="30sp"
		    android:text="Illness Information" />
		
		<EditText
        	android:id="@+id/child_visit4_num_times_diarrhea_past_week"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
        	android:hint="Number of times diarrhea past week?" />
	
		<EditText
        	android:id="@+id/child_visit4_num_times_vomit_past_week"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
        	android:hint="Number of times vomit past week?" />
		
		<EditText
        	android:id="@+id/child_visit4_num_times_cough_past_week"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
        	android:hint="Number of times cough past week?" />
		
		<EditText
        	android:id="@+id/child_visit4_num_times_fever_past_week"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
        	android:hint="Number of times fever past week?" />
	
		<EditText
        	android:id="@+id/child_visit4_num_times_other_illness_past_week"
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
            android:textSize="30sp" 
        	android:hint="Number of times other illness past week?" />
		
		<EditText
        	android:id="@+id/child_visit4_other_illness_information"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
            android:textSize="30sp" 
        	android:hint="Other illness information"/>

	</LinearLayout>
</ScrollView>
	    