package com.example.guatemedic;

import java.util.ArrayList;

import android.os.Bundle;
import android.support.v4.app.FragmentTransaction;
import android.support.v4.app.ListFragment;
import android.view.Menu;
import android.view.MenuInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ArrayAdapter;
import android.widget.CheckBox;
import android.widget.ListView;
import android.widget.TextView;

public class ViewFamilyListFragment extends ListFragment {
public static final String EXTRA_VILLAGE_NAME = "com.example.guatemedic.village_name";
	
	private static final String TAG = "FamilyListFragment";
	
	private ArrayList<DetailedFamily> mFamilies;
	
	@Override
	public void onCreateOptionsMenu(Menu menu, MenuInflater inflater) {
	
	   inflater.inflate(R.menu.activity_itemdetail, menu);
	
	}

	
	@Override
	public void onResume() {
		super.onResume();
		((FamilyAdapter)getListAdapter()).notifyDataSetChanged();
		String villageName = getArguments().getString("villageName", null);
		getActivity().setTitle("Families in " + villageName);
	}
	
	public static ViewFamilyListFragment newInstance(String villageName) {
		ViewFamilyListFragment f = new ViewFamilyListFragment();
		
		Bundle args = new Bundle();
        args.putString("villageName", villageName);
        f.setArguments(args);
        
		return f;
		
	}

	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setHasOptionsMenu(true);

		
		//String village_name = (String)((getActivity()).getIntent().getSerializableExtra(FamilyListFragment.EXTRA_VILLAGE_NAME));
		//Log.i("TESTING", village_name);
		String villageName = getArguments().getString("villageName", null);
		getActivity().setTitle("Families in " + villageName);
		mFamilies = DetailedRecordsStore.get(getActivity().getApplication()).getFamilies(villageName);
		FamilyAdapter adapter = new FamilyAdapter(mFamilies);
		setListAdapter(adapter);
	}
	
	@Override
	public void onListItemClick(ListView l, View v, int position, long id) {
		DetailedFamily family = ((FamilyAdapter)getListAdapter()).getItem(position);

		//Move to the children within that family
		ViewChildListFragment children = ViewChildListFragment.newInstance(family.getId());
		FragmentTransaction ft = getFragmentManager().beginTransaction();
		ft.replace(R.id.fragmentContainer, children);
		ft.addToBackStack(null);
		ft.commit();	
		
	}
	
	private class FamilyAdapter extends ArrayAdapter<DetailedFamily>  {
		public FamilyAdapter(ArrayList<DetailedFamily> families) {
			super(getActivity(), 0, families);
		}
		
		@Override
		public View getView(final int position, View convertView, ViewGroup parent) {
			if (convertView == null) {
				convertView = getActivity().getLayoutInflater().inflate(R.layout.list_item_fragment, null);
			}
			
			DetailedFamily family = getItem(position);
			int familyId = family.getId();
			
			CheckBox checkbox = (CheckBox)convertView.findViewById(R.id.list_item_checkbox);
			checkbox.setVisibility(View.GONE);
			
			//Assign values for view
			TextView familyNameTextView = (TextView)convertView.findViewById(R.id.list_item_title);
			familyNameTextView.setText(family.getParent1_first_name() + " " + family.getParent1_middle_name() + " " + family.getParent1_last_name());
			
			int numChildren = 0;
			//numChildren = family.getChildren().size(); //THIS CAN BE USED IF YOU MUST DOWNLOAD ALL CHILDREN IN A FAMILY
			numChildren = DetailedRecordsStore.get(getActivity().getApplication()).getChildren(familyId).size();
			
			TextView villageSubtitle = (TextView)convertView.findViewById(R.id.list_item_subtitle);
			villageSubtitle.setText(numChildren + " Children");

			return convertView;
			
		}
	}

}
