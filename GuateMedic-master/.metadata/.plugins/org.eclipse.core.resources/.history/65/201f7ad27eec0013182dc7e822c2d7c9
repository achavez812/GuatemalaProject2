package com.example.guatemedic;

import java.util.Calendar;
import java.util.Date;
import java.util.UUID;

import org.json.JSONException;
import org.json.JSONObject;

import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

public class AddFamilyFragment extends Fragment {
	
	String village;
	
	public AddFamilyFragment() {
		village = DetailedRecordsStore.get(getActivity()).getAddVillage();
	}
	
	
	public View onCreateView(LayoutInflater inflater, ViewGroup container, Bundle savedInstanceState) {
		//Inflate the layout for this fragment
		View v = inflater.inflate(R.layout.add_family_fragment, container, false);
		TextView tv = (TextView)v.findViewById(R.id.add_family_header);
		tv.setText(village);
		
		Button b = (Button)v.findViewById(R.id.make_family_button);
		b.setOnClickListener(new View.OnClickListener() {
			@Override
			public void onClick(View v) {
				EditText parent1_first_name = (EditText)getActivity().findViewById(R.id.parent1_first_name);
				EditText parent1_middle_name = (EditText)getActivity().findViewById(R.id.parent1_middle_name);
				EditText parent1_last_name = (EditText)getActivity().findViewById(R.id.parent1_last_name);
				EditText parent1_dob = (EditText)getActivity().findViewById(R.id.parent1_dob);
				
				EditText parent2_first_name = (EditText)getActivity().findViewById(R.id.parent2_first_name);
				EditText parent2_middle_name = (EditText)getActivity().findViewById(R.id.parent2_middle_name);
				EditText parent2_last_name = (EditText)getActivity().findViewById(R.id.parent2_last_name);
				EditText parent2_dob = (EditText)getActivity().findViewById(R.id.parent2_dob);
				try {
					JSONObject obj = new JSONObject();
					obj.put("village", village);
					obj.put("parent1_first_name", parent1_first_name.getText().toString());
					obj.put("parent1_middle_name", parent1_middle_name.getText().toString());
					obj.put("parent1_last_name", parent1_last_name.getText().toString());
					obj.put("parent1_dob", parent1_dob.getText().toString());
					obj.put("parent2_first_name", parent2_first_name.getText().toString());
					obj.put("parent2_middle_name", parent2_middle_name.getText().toString());
					obj.put("parent2_last_name", parent2_last_name.getText().toString());
					obj.put("parent2_dob", parent2_dob.getText().toString());
					
					String id = UUID.randomUUID().toString();
					
					obj.put("family_id", id);
					obj.put("temp_family_id", id);
					obj.put("uploaded", "0");
					
					Calendar calendar = Calendar.getInstance(); //Uses default timezone (figure out what to use)
					//yyyy-MM-dd hh:mm:ss
					String year = "" + calendar.get(Calendar.YEAR);
					String month = "" + calendar.get(Calendar.MONTH);
					if (month.length() == 1) month = 0 + month;
					String day = "" + calendar.get(Calendar.DAY_OF_MONTH);
					if (day.length() == 1) day = 0 + day;
					
					String hour = "" + calendar.get(Calendar.HOUR_OF_DAY);
					if (hour.length() == 1) hour = 0 + hour;
					String minute = "" + calendar.get(Calendar.MINUTE);
					if (minute.length() == 1) minute = 0 + minute;
					String second = "" + calendar.get(Calendar.SECOND);
					if (second.length() == 1) second = 0 + second;
					
					String date = year + "-" + month + "-" + day + " " + hour + ":" + minute + ":" + second;

					obj.put("date_created", date);
					obj.put("date_last_modified", date);
					
					GuatemedicWriter gw = new GuatemedicWriter(getActivity().getApplication());
					gw.saveNewFamily(obj.toString());
					DetailedRecordsStore.get(getActivity().getApplication()).addNewFamily(obj.toString());
				} catch (JSONException e) {
					e.printStackTrace();
				}
				
				//Need to write to file
				//

			}
		});
		return v;
	}

}
