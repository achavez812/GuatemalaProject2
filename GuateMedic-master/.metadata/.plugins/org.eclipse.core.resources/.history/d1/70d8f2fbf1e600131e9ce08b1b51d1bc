package com.example.guatemedic;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStreamWriter;
import java.io.Writer;

import android.content.Context;

public class GuatemedicWriter {
	
	private Context mContext;
	
	public GuatemedicWriter(Context c) {
		mContext = c;
	}
	
	//Generates a unique filename by using timestamp and random number generator
	//Timestamp of file is found by ignoring last 6 characters of String
	private String generateFilename() {
		Long tsLong = System.currentTimeMillis()/1000;
		String ts = tsLong.toString();
		
		int min = 100000;
		int max = 999999;
		int randomNum = (int) (min + (Math.random() * (max - min)));
		
		return ts + randomNum; 
	}
	
	public void saveRecords(String data) {
		try {
			File dir = mContext.getDir("Downloads", Context.MODE_PRIVATE);
			//Temporary
			//Need to figure out when to delete old downloads
			//When upload of all data occurs?
			for (File f : dir.listFiles()) {
				f.delete();
			}
			
			String filename = generateFilename();
			
			File file = new File(dir, filename);

			FileOutputStream out = mContext.openFileOutput(file.getName(), Context.MODE_PRIVATE);
			out.write(data.getBytes());
			out.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
}
