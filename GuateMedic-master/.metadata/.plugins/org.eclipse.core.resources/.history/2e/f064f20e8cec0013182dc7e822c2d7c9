package com.stanford.guatemedic;

import java.io.File;

import android.app.Fragment;
import android.graphics.drawable.Drawable;
import android.os.Bundle;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.EditText;
import android.widget.ImageView;


/**
 * A placeholder fragment containing a simple view.
 */
public class ProfileFragment extends Fragment {
	/**
	 * The fragment argument representing the section number for this
	 * fragment.
	 */
	private static final String PROFILE_LOG = "ProfileFragment";
	private DetailedChild profile;
	/**
	 * Returns a new instance of this fragment for the given section number.
	 */
	public static ProfileFragment newInstance(String id) {
		ProfileFragment fragment = new ProfileFragment(id);
		Bundle args = new Bundle();
		
		fragment.setArguments(args);
		return fragment;
	}
	
	public ProfileFragment(String id) {
		DetailedRecordsStore drs = DetailedRecordsStore.get(getActivity());
		profile = drs.getChild(id);
	}
	
	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		View profile_form_fragment = inflater.inflate(R.layout.profile_basic_form,
				container, false);
//		ImageView pic = (ImageView) profile_form_fragment.findViewById(R.id.ImageView_kid_picture);
		File image_file = getActivity().getFileStreamPath("photo_" + profile.getId() + ".png");
//		Drawable saved_pic = Drawable.createFromPath(image_file.toString());
//		if (saved_pic != null){
//			Log.d(PROFILE_LOG, "Found the pic to be saved, setting");
//			ImageView pic = (ImageView) profile_form_fragment.findViewById(R.id.ImageView_kid_picture);
//			pic.setImageDrawable(saved_pic);
//		}
//		
		EditText firstNameField = (EditText) profile_form_fragment.findViewById(R.id.editText_first_name);
		EditText lastNameField = (EditText) profile_form_fragment.findViewById(R.id.editText_last_name);
		EditText dobField = (EditText) profile_form_fragment.findViewById(R.id.editText_dob);
		
		firstNameField.setText(profile.getFirst_name());
		lastNameField.setText(profile.getLast_name());
		dobField.setText(profile.getDate_of_birth());
		
		return profile_form_fragment;


		
		
	}
}

