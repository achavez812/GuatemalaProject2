package com.stanford.guatemedic;

import java.util.ArrayList;
import java.util.UUID;

public class BasicFamily {
	//Basic Info
	private String mId; //This is the key
	private String mVillage;
	private String mParent1_first_name;
	private String mParent1_middle_name;
	private String mParent1_last_name;
	private ArrayList<String> mChildren;

	private boolean mCheckboxSelected;
	
	public BasicFamily() {
		mCheckboxSelected = false;
	}

	public String getId() {
		return mId;
	}

	public void setId(String id) {
		mId = id;
	}

	public String getVillage() {
		return mVillage;
	}

	public void setVillage(String village) {
		mVillage = village;
	}

	public String getParent1_first_name() {
		return mParent1_first_name;
	}

	public void setParent1_first_name(String parent1_first_name) {
		mParent1_first_name = parent1_first_name;
	}

	public String getParent1_middle_name() {
		return mParent1_middle_name;
	}

	public void setParent1_middle_name(String parent1_middle_name) {
		mParent1_middle_name = parent1_middle_name;
	}

	public String getParent1_last_name() {
		return mParent1_last_name;
	}

	public void setParent1_last_name(String parent1_last_name) {
		mParent1_last_name = parent1_last_name;
	}

	public ArrayList<String> getChildren() {
		return mChildren;
	}

	public void setChildren(ArrayList<String> children) {
		mChildren = children;
	}
	
	public boolean isCheckboxSelected() {
		return mCheckboxSelected;
	}

	public void setCheckboxSelected(boolean checkboxSelected) {
		mCheckboxSelected = checkboxSelected;
	}

}
