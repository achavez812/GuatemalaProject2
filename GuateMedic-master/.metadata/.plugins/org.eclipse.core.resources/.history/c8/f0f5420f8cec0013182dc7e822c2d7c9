package com.stanford.guatemedic;

import android.content.Intent;
import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentActivity;
import android.support.v4.app.FragmentManager;
import android.util.Log;
import android.view.MenuItem;


public abstract class ViewDataSingleFragmentActivity extends FragmentActivity {
	protected abstract Fragment createFragment();
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.main_activity);
		FragmentManager fm = getSupportFragmentManager();
		Fragment fragment = fm.findFragmentById(R.id.fragmentContainer);
		
		if (fragment == null) {
			fragment = createFragment();
			//Create a new fragment transaction
			//Include one add operation in it
			//Commit it
			fm.beginTransaction().add(R.id.fragmentContainer, fragment).commit();
		}
	}
	
	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		switch (item.getItemId()) {
		case R.id.action_addchild:	
			//Go to a new page
			Intent child_intent = new Intent(getApplication(), AddChildActivity.class);
			child_intent.putExtra("family", DetailedRecordsStore.get(getApplication()).getCurrentFamily());
			startActivity(child_intent);	
			
			return true;
		case R.id.action_addfamily:
			//Go to a new page	
			Intent family_intent = new Intent(getApplication(), AddFamilyActivity.class);
			family_intent.putExtra("village", DetailedRecordsStore.get(getApplication()).getCurrentVillage());
			startActivity(family_intent);	

			return true;
		default:
			return false;	
		}
	}
	

}
