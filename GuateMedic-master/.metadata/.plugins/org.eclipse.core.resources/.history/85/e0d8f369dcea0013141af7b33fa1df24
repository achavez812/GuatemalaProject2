package com.example.guatemedic;

import java.util.ArrayList;

import android.os.Bundle;
import android.support.v4.app.ListFragment;
import android.util.Log;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ArrayAdapter;
import android.widget.CheckBox;
import android.widget.CompoundButton;
import android.widget.ListView;
import android.widget.TextView;
import android.widget.Toast;
import android.widget.CompoundButton.OnCheckedChangeListener;

public class SelectChildListFragment extends ListFragment {
	
	
	public static final String EXTRA_VILLAGE_NAME = "com.example.guatemedic.village_name";
	
	private static final String TAG = "ChildListFragment";
	
	private ArrayList<BasicChild> mChildren;
	
	@Override
	public void onResume() {
		super.onResume();
		((ChildAdapter)getListAdapter()).notifyDataSetChanged();
		String familyId = getArguments().getString("familyId");
		BasicFamily f = BasicRecordsStore.get(getActivity().getApplication()).getFamily(familyId);
		getActivity().setTitle("Children in " + f.getParent1_last_name() + " Family");
	}
	
	public static SelectChildListFragment newInstance(String familyId) {
		SelectChildListFragment f = new SelectChildListFragment();
		
		Bundle args = new Bundle();
        args.putString("familyId", familyId);
        f.setArguments(args);
        
		return f;
		
	}

	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		int familyId = getArguments().getInt("familyId", 0);
		BasicFamily f = BasicRecordsStore.get(getActivity().getApplication()).getFamily(familyId);
		getActivity().setTitle("Children in " + f.getParent1_last_name() + " Family");
		mChildren = BasicRecordsStore.get(getActivity().getApplication()).getChildren(familyId);
		ChildAdapter adapter = new ChildAdapter(mChildren);
		setListAdapter(adapter);
	}
	
	@Override
	public void onListItemClick(ListView l, View v, int position, long id) {
		BasicChild child = ((ChildAdapter)getListAdapter()).getItem(position);
		//Move to the children within that family
		
		
	}
	
	private class ChildAdapter extends ArrayAdapter<BasicChild>  {
		public ChildAdapter(ArrayList<BasicChild> children) {
			super(getActivity(), 0, children);
		}
		
		@Override
		public View getView(final int position, View convertView, ViewGroup parent) {
			if (convertView == null) {
				convertView = getActivity().getLayoutInflater().inflate(R.layout.list_item_fragment, null);
			}
			
			BasicChild child = getItem(position);
			
			//Assign values for view
			TextView titleTextView = (TextView)convertView.findViewById(R.id.list_item_title);
			titleTextView.setText("" + child.getFirst_name() + " " + child.getMiddle_name() + " " + child.getLast_name());
			
			CheckBox checkbox = (CheckBox)convertView.findViewById(R.id.list_item_checkbox);
			checkbox.setChecked(child.isCheckboxSelected());
			checkbox.setOnCheckedChangeListener(new CompoundButton.OnCheckedChangeListener() {
				public void onCheckedChanged(CompoundButton buttonView, boolean isChecked) {
					//View v = (View)buttonView.getParent();
					//String str = (String)((TextView)v.findViewById(R.id.list_item_title)).getText();
					BasicChild theChild = mChildren.get(position);
					theChild.setCheckboxSelected(isChecked);
					
					if (isChecked) {
						int familyId = theChild.getFamilyId();
						BasicFamily family = BasicRecordsStore.get(getActivity().getApplication()).getFamily(familyId);
						family.setCheckboxSelected(true);
						String villageName = family.getVillage();
						Village village = BasicRecordsStore.get(getActivity().getApplication()).getVillage(villageName);
						village.setCheckboxSelected(true);
					}
					
				}
			});
			return convertView;
		}
	}

}
