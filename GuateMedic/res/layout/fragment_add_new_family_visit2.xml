<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/family_visit2_num_pregnancies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
            android:hint="¿Cuántos Partos ha Tenido la Madre?"/>

        <EditText
            android:id="@+id/family_visit2_num_children_alive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
            android:hint="¿Cuántos Niños Viven?" />

        <EditText
            android:id="@+id/family_visit2_num_children_dead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
            android:hint="¿Cuántos Niños Han Muerto?" />

        <EditText
            android:id="@+id/family_visit2_death_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:textSize="30sp" 
            android:hint="Información Sobre Los Muertos" />

        <EditText
            android:id="@+id/family_visit2_num_children_under_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
            android:hint="¿Cuántos Niños Menores de 5 Años?" />

        <EditText
            android:id="@+id/family_visit2_num_people_in_household"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
			android:layout_marginTop="30dp"
			android:ellipsize="start"
            android:inputType="number"
            android:textSize="30sp" 
            android:hint="¿Cuántos Personas Viven en la Casa?" />


    </LinearLayout>

</ScrollView>