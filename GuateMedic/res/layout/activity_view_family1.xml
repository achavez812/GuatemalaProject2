<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
    	
	<Button
	    android:id="@+id/view_family_add_child_button"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:text="Añadir un Niño"
	    />
	
	<LinearLayout
	    android:id="@+id/top_linear_layout"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_above="@id/view_family_add_child_button"
	    android:paddingLeft="20dp"
	    android:paddingTop="20dp"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical" >
	    
	 	<TextView
		    android:id="@+id/view_family_village_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textSize="30sp"
			android:text="Long Village Name" />
	    
	    <LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="8dp"
	    	android:orientation="horizontal">
	    	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.5"
	            android:orientation="vertical">
	            <TextView
	                android:id="@+id/view_family_parent1_header"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="25sp"
					android:text="Madre" />
	            
	            <TextView
	                android:id="@+id/view_family_parent1_name_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="21sp"
					android:text="Mother name" />
	            
	            <TextView
	                android:id="@+id/view_family_parent1_dob_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="21sp"
					android:text="Mother DOB" />
	            
	            <TextView
	                android:id="@+id/view_family_parent2_header"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="7dp"
					android:textStyle="bold"
					android:textSize="25sp"
					android:text="Padre" />
	            
	            <TextView
	                android:id="@+id/view_family_parent2_name_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="21sp"
					android:text="Father Name" />
	            
	            <TextView
	                android:id="@+id/view_family_parent2_dob_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="21sp"
					android:text="Father DOB" />
	            
	            <TextView
	                android:id="@+id/view_family_parent2_lives_with_family_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="21sp"
					android:text="Lives with family?" />
	            
	            <TextView
	                android:id="@+id/view_family_parent2_occupation_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="21sp"
					android:text="Father's job?" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.5"
	            android:layout_marginTop="5dp"
	            android:orientation="vertical">
	            
	            <TextView
	                android:id="@+id/view_family_marital_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="19sp"
					android:text="Family Field 1" />
	            
	            <TextView
	                android:id="@+id/view_family_num_children_under_5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="19sp"
					android:text="Family Field 2" />
	            
	            <TextView
	                android:id="@+id/view_family_num_people_in_household"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="19sp"
					android:text="Family Field 3" />
	        
	            <!-- 
	            <Button 
	                android:id="@+id/view_family_view_past_visits"
	                android:layout_width="250dp"
	                android:layout_height="60dp"
	                android:layout_marginTop="12dp"
	                android:gravity="center"
	                android:text="Visitas Pasadas" />
	            -->
	            <Button 
	                android:id="@+id/view_family_log_new_visit"
	                android:layout_width="250dp"
	                android:layout_height="60dp"
	                android:layout_marginTop="14dp"
	                android:gravity="center"
	                android:text="Editar la Familia" />
	            
	        </LinearLayout>
	        
	        
	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/view_family_child_list_header"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:gravity="center"
	        android:textSize="30sp"
	        android:text="Los Niños" />
	
	    <FrameLayout
		    android:id="@+id/child_list_container"
		    android:layout_weight="1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
	    
	</LinearLayout>

</RelativeLayout>
